
@page "/library"
@using SYSS8.OPF.Clean.WebApi.Contracts
@inject ApiClient Api
@inject AuthState Auth
@inject IUiStatus UI
@using SYSS8.OPF.Clean.WebUi.Components.Shared

<h1 class="h3 mb-4">Authors</h1>

@if (!Auth.IsAuthenticated)
{
    <div class="alert alert-warning" role="alert">
        You are not signed in. <NavLink href="/">Go to sign in</NavLink>.
    </div>
}
else
{
    <EntityList TItem="AuthorDTO" Title="Authors" Items="_authors"
                Toolbar="@(RenderToolbar())"
                ItemTemplate="@(a => RenderAuthorCard(a))" />

    <!-- Create Modal -->
    <div class="modal fade" id="createAuthorModal" tabindex="-1" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">Create author</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <EditForm Model="_create" OnValidSubmit="Create">
            <div class="modal-body">
              <div class="mb-3">
                <label class="form-label">Name</label>
                <InputText class="form-control" @bind-Value="_create.Name" />
              </div>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Close</button>
              <button class="btn btn-primary" disabled="@string.IsNullOrWhiteSpace(_create.Name)">Save</button>
            </div>
          </EditForm>
        </div>
      </div>
    </div>
}

@code{
    List<AuthorDTO>? _authors;
    CreateAuthorDTO _create = new();

    protected override async Task OnInitializedAsync() => await Load();

    RenderFragment RenderToolbar() => __builder =>
    {
        if (Auth.IsAuthenticated && (Auth.Role?.Equals("LÃ¤rare", StringComparison.OrdinalIgnoreCase) == true
            || Auth.Role?.Equals("Admin", StringComparison.OrdinalIgnoreCase) == true))
        {
            <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createAuthorModal">Create</button>;
            <button class="btn btn-outline-secondary ms-2" @onclick="Load">Refresh</button>;
        }
        else
        {
            <button class="btn btn-outline-secondary" @onclick="Load">Refresh</button>;
        }
    };

    RenderFragment RenderAuthorCard(AuthorDTO a) => __builder =>
    {
        <div class="card h-100">
            <div class="card-body">
                <h2 class="h5 card-title">@a.Name</h2>
            </div>
        </div>;
    };

    async Task Load()
    {
        try { UI.Busy(true); _authors = await Api.GetAuthorAsync(); }
        catch (ApiProblemException ex) { UI.SetError(new UiError("Load failed", ex.Message)); }
        finally { UI.Busy(false); }
    }

    async Task Create()
    {
        try
        {
            UI.Busy(true);
            await Api.CreateAuthorAsync(_create.Name);
            _create = new();
            await Load();
            // User can close the modal; we avoid custom JS interop.
        }
        catch (ApiProblemException ex) when (ex.Status == 401)
        { UI.SetError(new UiError("Not authenticated", "Sign in to create authors.")); }
        catch (ApiProblemException ex) when (ex.Status == 403)
        { UI.SetError(new UiError("Forbidden", "Requires Teacher or Admin.")); }
        catch (ApiProblemException ex)
        { UI.SetError(new UiError("Error", ex.Message)); }
        finally { UI.Busy(false); }
    }

    public class CreateAuthorDTO { public string Name { get; set; } = ""; }
}
